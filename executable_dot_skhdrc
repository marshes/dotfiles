# shift + lctrl - up    : yabai -m window --insert north
# shift + lctrl - right : yabai -m window --insert east
                 

# Expand windows
shift + lctrl - m : yabai -m window --resize top_left:-50:-50; \
                    yabai -m window --resize bottom_right:50:50
shift + lctrl - n : yabai -m window --resize top_left:50:50; \
                    yabai -m window --resize bottom_right:-50:-50

# Balance Windows
shift + lctrl - b : yabai -m space --balance

# Rotate windows clockwise and anticlockwise
shift + lctrl - u : yabai -m space --rotate 90
shift + lctrl - o : yabai -m space --rotate 270

# Rotate on X and Y Axis
shift + lctrl - 8    : yabai -m space --mirror x-axis
shift + lctrl - h    : yabai -m space --mirror y-axis
shift + lctrl - 0x29 : yabai -m space --mirror y-axis

# Change focus from one monitor to the other (only if 2 monitor setup)
shift + lctrl - s : yabai -m display --focus recent

# Move focused window to workspace and then use skhd to send keyboard shortcut to change view to that window

shift + lctrl - 1 : yabai -m window --space 1 --focus
shift + lctrl - 2 : yabai -m window --space 2 --focus
shift + lctrl - 3 : yabai -m window --space 3 --focus
shift + lctrl - 4 : yabai -m window --space 4 --focus
shift + lctrl - 5 : yabai -m window --space 5 --focus
shift + lctrl - 6 : yabai -m window --space 6 --focus
shift + lctrl - 7 : yabai -m window --space 7 --focus




