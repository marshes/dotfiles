# Navigation
lctrl - j : yabai -m window --focus west
lctrl - k : yabai -m window --focus south
lctrl - i : yabai -m window --focus north
lctrl - l : yabai -m window --focus east

# Moving windows
shift + lctrl - left  : yabai -m window --warp west
shift + lctrl - down  : yabai -m window --warp south
shift + lctrl - up    : yabai -m window --warp north
shift + lctrl - right : yabai -m window --warp east

# Navigate all windows including floating
lctrl - 0x29 : yabai -m window --focus "$(yabai -m query --windows | jq -re "sort_by(.display, .frame.x, .frame.y, .id) | map(select(.\"is-visible\" == true and .role != \"AXUnknown\")) | reverse | nth(index(map(select(.\"has-focus\" == true))) - 1).id")"
lctrl - h : yabai -m window --focus "$(yabai -m query --windows | jq -re "sort_by(.display, .frame.x, .frame.y, .id) | map(select(.\"is-visible\" == true and .role != \"AXUnknown\")) | reverse | nth(index(map(select(.\"has-focus\" == true))) + 1).id")"

# Float + move to center w/ border / Unfloat window
shift + lctrl - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border; \
    yabai -m window --grid 8:8:2:1:4:6


# Move Windows two steps -works with floating and tiling
shift + lctrl - j : yabai -m window --resize left:-100:0; \
                    yabai -m window --resize right:-100:0
shift + lctrl - k : yabai -m window --resize bottom:0:100; \
                    yabai -m window --resize top:0:100
shift + lctrl - i : yabai -m window --resize top:0:-100; \
                    yabai -m window --resize bottom:0:-100
shift + lctrl - l : yabai -m window --resize right:100:0; \
                    yabai -m window --resize left:100:0

# Move windows only works on floating windows and should remain commented out in favor of the above block
